                    ]
                },
                "description": "Get all cases for a specific client"
            }
        },
        {
            "name": "Remove Assigned User",
            "event": [
                {
                    "listen": "test",
                    "script": {
                        "exec": [
                            "pm.test(\"Assigned user removed\", function () {",
                            "    pm.response.to.have.status(200);",
                            "    var jsonData = pm.response.json();",
                            "    pm.expect(jsonData.assignedUser).to.be.null;",
                            "});"
                        ],
                        "type": "text/javascript"
                    }
                }
            ],
            "request": {
                "method": "DELETE",
                "header": [
                    {
                        "key": "Authorization",
                        "value": "Bearer {{caseworkerToken}}",
                        "type": "text"
                    }
                ],
                "url": {
                    "raw": "{{baseUrl}}/clients/{{createdClientId}}/user",
                    "host": [
                        "{{baseUrl}}"
                    ],
                    "path": [
                        "clients",
                        "{{createdClientId}}",
                        "user"
                    ]
                },
                "description": "Remove the assigned user from a client"
            }
        },
        {
            "name": "Delete Client (Admin Only)",
            "event": [
                {
                    "listen": "test",
                    "script": {
                        "exec": [
                            "pm.test(\"Client deleted successfully\", function () {",
                            "    pm.response.to.have.status(200);",
                            "    var jsonData = pm.response.json();",
                            "    pm.expect(jsonData.message).to.equal(\"Client deleted successfully\");",
                            "});"
                        ],
                        "type": "text/javascript"
                    }
                }
            ],
            "request": {
                "method": "DELETE",
                "header": [
                    {
                        "key": "Authorization",
                        "value": "Bearer {{adminToken}}",
                        "type": "text"
                    }
                ],
                "url": {
                    "raw": "{{baseUrl}}/clients/{{createdClientId}}",
                    "host": [
                        "{{baseUrl}}"
                    ],
                    "path": [
                        "clients",
                        "{{createdClientId}}"
                    ]
                },
                "description": "Delete a client (Admin only)"
            }
        },
        {
            "name": "Delete Client (Non-Admin - Should Fail)",
            "event": [
                {
                    "listen": "test",
                    "script": {
                        "exec": [
                            "pm.test(\"Non-admin cannot delete client\", function () {",
                            "    pm.response.to.have.status(403);",
                            "});"
                        ],
                        "type": "text/javascript"
                    }
                }
            ],
            "request": {
                "method": "DELETE",
                "header": [
                    {
                        "key": "Authorization",
                        "value": "Bearer {{caseworkerToken}}",
                        "type": "text"
                    }
                ],
                "url": {
                    "raw": "{{baseUrl}}/clients/1",
                    "host": [
                        "{{baseUrl}}"
                    ],
                    "path": [
                        "clients",
                        "1"
                    ]
                },
                "description": "Caseworker tries to delete client (should fail)"
            }
        }
    ]
}